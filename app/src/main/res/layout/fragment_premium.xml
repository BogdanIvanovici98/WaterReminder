<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="32dp">

        <TextView
            android:id="@+id/premium_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium_title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/premium_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium_description"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/premium_benefits_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium_benefits_title"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginBottom="8dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/premium_benefits"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium_benefits"
            android:textSize="16sp"
            android:layout_marginBottom="20dp"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/premium_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/premium_footer"
            android:textSize="16sp"
            android:layout_marginBottom="28dp"
            android:textAlignment="center"/>

        <Button
            android:id="@+id/btn_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/btn_subscribe"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/button_text"
            style="@style/AppButton" />

        <TextView
            android:id="@+id/text_user_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="24dp"
            android:textAlignment="center"/>

    </LinearLayout>
</ScrollView>
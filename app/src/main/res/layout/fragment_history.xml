<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="24dp"
    tools:context=".HistoryFragment">

    <!-- Legenda (opÈ›ional) -->

    <FrameLayout
        android:id="@+id/calendarContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.kizitonwose.calendar.view.CalendarView
            android:id="@+id/calendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:cv_orientation="vertical"
            app:cv_dayViewResource="@layout/calendar_day_layout"
            app:cv_monthHeaderResource="@layout/calendar_month_header"
            tools:listitem="@layout/calendar_day_layout"/>
    </FrameLayout>

    <!-- Buton Edit/Cancel la baza ecranului -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="0dp"
        android:id="@+id/editButtonContainer">

        <Button
            android:id="@+id/editHistoryButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/history_edit"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/button_bg"
            android:textColor="@color/button_text"
            android:elevation="6dp"
            android:gravity="center"
            style="@style/AppButton" />
    </LinearLayout>

</LinearLayout>